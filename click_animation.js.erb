var pos = $("<%= @link_id %>").offset();

$("<p />", { text: "Added to cart" }).
css({
  position: 'absolute',
  top: pos.top - 30,
  left: pos.left,
  'background-color': 'yellow'
}).
appendTo("body").
animate({
  opacity: 0,
  top: "-=50"
}, {duration: 1000, complete: function() { $(this).remove() }});
